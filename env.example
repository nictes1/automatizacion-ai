# PulpoAI - Variables de Entorno de Ejemplo

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/pulpo_db

# Directorio de uploads
UPLOAD_DIR=uploads

# Límites de seguridad
MAX_UPLOAD_BYTES=10485760  # 10MB

# Soft delete
INGESTION_PURGE_WINDOW_DAYS=7

# Reintentos
INGESTION_MAX_ATTEMPTS=3

# OCR
OCR_ENABLED=false
TIKA_MIN_TEXT_THRESHOLD=400

# Workers
PURGE_WORKER_INTERVAL_SECONDS=3600  # 1 hora
RETRY_WORKER_INTERVAL_SECONDS=60    # 1 minuto

# Concurrencia y timeouts
INGESTION_MAX_CONCURRENT=5          # Máximo procesamiento concurrente
INGESTION_PROCESS_TIMEOUT=300       # Timeout de procesamiento (5 min)

# Logging
LOG_LEVEL=INFO

# Seguridad
METRICS_KEY=your-secret-metrics-key-here

# Testing
TEST_WORKSPACE_ID=123e4567-e89b-12d3-a456-426614174000
ENABLE_TEST_ENDPOINT=false

# Seguridad avanzada
STRICT_MIME=false
